{
  "name": "mysite",
  "version": "1.0.0",
  "description": "Conversion-focused service studio website built as a static multi-page site for fast launch on Cloudflare Pages.",
  "main": "app.js",
  "scripts": {
    "build": "node scripts/build_static_site.cjs",
    "sync:seo": "node scripts/sync_meta_from_config.cjs",
    "check:syntax": "node --check app.js && node --check scripts/*.cjs",
    "lint": "npm run check:syntax",
    "test": "python3 scripts/smoke_test_site.py",
    "test:e2e": "node scripts/final_launch_checks.cjs",
    "check:assets": "node scripts/check_asset_refs.cjs dist",
    "check:placeholders": "python3 scripts/check_no_placeholders.py",
    "screenshots": "node scripts/capture_screenshots.cjs",
    "gate:predeploy": "node scripts/predeploy_gate.cjs",
    "smoke:deployed": "bash scripts/smoke_deployed.sh",
    "screenshots:install": "npx playwright install chromium",
    "svgo": "if command -v svgo >/dev/null 2>&1; then svgo --folder assets --recursive --multipass; else echo 'svgo not installed. Install svgo (npm i -D svgo) and run npm run svgo.'; fi",
    "check": "make check",
    "dev": "python3 -m http.server 8080 --directory ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "playwright": "^1.58.2"
  }
}
